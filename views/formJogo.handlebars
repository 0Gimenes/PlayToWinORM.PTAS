    <!-- Definindo se é um form de atualização ou de cadastro -->
{{#if jogo}}
  <h1>Atualizar Jogo</h1>
  <form action="/jogos/{{this.id}}/update" method="post">
{{else}}
  <h1> Cadastrar Jogo</h1>
  <form action="/jogos/novo" method="post">
{{/if}}

  <div>
    <label for="titulo">Título</label>
    <input type="text" id="titulo" name="titulo" value="{{jogos.titulo}}" />
  </div>
  <div>
    <label for="desc">Descrição</label>
    <input type="text" id="desc" name="desc" value="{{jogos.desc}}" />
  </div>
  <div>
    <label for="prec">Preço</label>
    <input type="number" id="prec" name="prec" value="{{jogos.prec}}" />
  </div>
  {{#if jogos}}
    <input type="submit" value="Salvar">
  {{else}}
    <input type="submit" value="Cadastrar" />
  {{/if}}
</form>